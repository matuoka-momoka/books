<h1>Books</h1>

<boby>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
      error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>


    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <h4><%= f.submit 'Create Book' %></h4>



<% end %>
</boby>